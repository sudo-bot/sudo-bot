{
    "name": "sudo-bot",
    "version": "2.0.4",
    "description": "Create GitHub pull-requests as an app from the CLI",
    "main": "bin/sudo-bot.js",
    "types": "dist/index.d.ts",
    "private": false,
    "homepage": "https://github.com/sudo-bot/sudo-bot",
    "bugs": {
        "email": "williamdes@wdes.fr",
        "url": "https://github.com/sudo-bot/sudo-bot/issues"
    },
    "readme": "https://github.com/sudo-bot/sudo-bot#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/sudo-bot/sudo-bot.git"
    },
    "bin": {
        "sudo-bot": "bin/sudo-bot.js"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "test": "rm -rf dist/ && yarn run -s build && nyc mocha --ui tdd --reporter spec test/*.ts",
        "jshint": "jshint ./",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prettier": "prettier --ignore-path ./.prettierignore --write \"*/**/*.js\" \"*/**/*.ts\"",
        "sudo-bot": "node bin/sudo-bot.js",
        "build": "tsc",
        "prepublishOnly": "rm -rf dist/ && yarn run -s build"
    },
    "keywords": [
        "git",
        "bot",
        "pr",
        "github"
    ],
    "author": {
        "email": "williamdes@wdes.fr",
        "name": "William Desportes",
        "url": "https://william.wdes.fr"
    },
    "directories": {
        "lib": "src",
        "test": "test",
        "bin": "bin"
    },
    "license": "MPL-2.0",
    "dependencies": {
        "@octokit/rest": "^18.5.2",
        "ignore": "^5.1.8",
        "jsonwebtoken": "^8.5.1",
        "openpgp": "^4.10.10",
        "simple-git": "^2.37.0",
        "snack-cli": "^2.0.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.16",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.37",
        "@types/openpgp": "^4.4.15",
        "chai": "^4.3.4",
        "jshint": "^2.12.0",
        "mocha": "^8.3.2",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    },
    "prettier": {
        "singleQuote": true,
        "proseWrap": "never",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 120
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "require": [
            "source-map-support/register",
            "ts-node/register"
        ],
        "exclude": [
            "index.ts",
            "**/node_modules/**",
            "dist",
            "test",
            "coverage",
            ".nyc_output"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "all": true
    }
}
