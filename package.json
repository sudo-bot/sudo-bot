{
    "name": "sudo-bot",
    "version": "2.0.6",
    "description": "Create GitHub pull-requests as an app from the CLI",
    "main": "bin/sudo-bot.js",
    "types": "dist/index.d.ts",
    "private": false,
    "homepage": "https://github.com/sudo-bot/sudo-bot",
    "bugs": {
        "email": "williamdes@wdes.fr",
        "url": "https://github.com/sudo-bot/sudo-bot/issues"
    },
    "readme": "https://github.com/sudo-bot/sudo-bot#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/sudo-bot/sudo-bot.git"
    },
    "bin": {
        "sudo-bot": "bin/sudo-bot.js"
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "test": "rm -rf dist/ && yarn run -s build && nyc mocha --ui tdd --reporter spec test/*.ts",
        "jshint": "jshint ./",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prettier": "prettier --ignore-path ./.prettierignore --write \"*/**/*.js\" \"*/**/*.ts\"",
        "sudo-bot": "node bin/sudo-bot.js",
        "build": "tsc",
        "prepublishOnly": "rm -rf dist/ && yarn run -s build"
    },
    "keywords": [
        "git",
        "bot",
        "pr",
        "github"
    ],
    "author": {
        "email": "williamdes@wdes.fr",
        "name": "William Desportes",
        "url": "https://williamdes.eu"
    },
    "directories": {
        "lib": "src",
        "test": "test",
        "bin": "bin"
    },
    "license": "MPL-2.0",
    "dependencies": {
        "@octokit/rest": "^20.0.1",
        "ignore": "^5.2.4",
        "jsonwebtoken": "^9.0.1",
        "openpgp": "^5.9.0",
        "simple-git": "^3.19.1",
        "snack-cli": "^2.0.0"
    },
    "devDependencies": {
        "@openpgp/web-stream-tools": "^0.0.14",
        "@types/chai": "^4.3.5",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.4.5",
        "@types/openpgp": "^4.4.18",
        "chai": "^4.3.7",
        "jshint": "^2.13.6",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "prettier": "^3.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "prettier": {
        "singleQuote": true,
        "proseWrap": "never",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 120
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "exclude": [
            "index.ts",
            "**/node_modules/**",
            "dist",
            "test",
            "coverage",
            ".nyc_output"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "all": true
    }
}
